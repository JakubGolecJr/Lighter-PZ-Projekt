@model Lighter_SocialMediaService.Models.Post

@{
    ViewData["Title"] = "Stwórz post";
}

<div class="create-post-container">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post" class="create-post-form">
        <div class="form-group">
            <label asp-for="Content" class="control-label">Treść posta</label>
            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Napisz swój post tutaj..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-buttons">
            <input type="submit" value="Utwórz" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Wróć do listy</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.0/jquery.validate.unobtrusive.min.js"></script>
}
